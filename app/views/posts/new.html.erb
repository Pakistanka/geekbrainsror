<h1>New Post</h1>

<%= form_for(@post, remote: true, ) do |form| %>

<div class="form-group">
<%= form.text_area :title, size: '20x1', class: 'form-control' %><br>
</div>
<div class="form-group">
<%= form.text_area :body, size: '50x15', class: 'form-control' %><br>
</div>
<div class="form-group">
<%= form.submit  class: 'btn btn-default pull-right'%>
</div>
<%end%>

<%= link_to 'Back', posts_path, class: 'btn btn-default' %>
